<%= form_for(@exura) do |f| %>
  <% if @exura.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@exura.errors.count, "error") %> prohibited this exura from being saved:</h2>

      <ul>
      <% @exura.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
<div class="contentcontainer med left" style="margin-left: 650px;">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
<div class="contentcontainer med left" style="margin-left: 650px;">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
<div class="contentcontainer med left" style="margin-left: 650px;">
    <%= f.label :phone %><br />
    <%= f.number_field :phone %>
  </div>
  <div class="field">
<div class="contentcontainer med right" style="margin-center: 650px;">
    <%= f.label :description %><br />
    <%= f.text_area :description, :rows => "8" %>
  </div>
  <div class="actions">
    <%= f.submit, "submit" %>
  </div>
<% end %>
